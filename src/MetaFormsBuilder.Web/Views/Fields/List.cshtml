@model FieldListVm

@{
    ViewBag.Title = "Fields";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<p>Listagem de Campos</p>

<div>
    <a asp-action="AddEdit" asp-controller="Fields"   asp-route-formId="@Model.FormId" class="btn btn-outline-secondary">Criar</a>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Tipo de Dados</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Fields)
    {
        <tr id="item-@item.Id">
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.DataType</td>
            <td>
                <a class="btn btn-outline-success btn-sm"
                   asp-action="AddEdit" asp-controller="Fields"
                   asp-route-id="@item.Id" asp-route-formid="@Model.FormId">Editar</a>
                <button class="btn btn-outline-danger btn-sm" onclick="del(@item.Id, '@item.Name', 'Fields', '@Url.Action("Excluir", "Fields")')">
                    Excluir
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="_delModal" />
@section scripts {
    <script src="~/js/list.js"></script>
}
